<div class = "main-body">
    {{add-code flag="gender"}}
    <br>
    <h3>Current Genders</h3>
    <table class="student-table">
      {{#if isEditing}}
      <div>
          <form>
              <br>
              <div class="form-group">
                  <table style="width:20%">
                    <tr>
                      <td>Name:</td>
                      <td>{{input value=name  id="name" type="text"}}</td> 
                    </tr><br>
                  </table>
              </div>
          </form>
          <br>
          <div>
              <a href="#" class="btn btn-default" role="button" {{action 'savePost'}}>Save</a>
              <a href="#" class="btn btn-default" role="button" {{action 'cancel'}}>Cancel</a>
          </div>
      </div>
    {{else}}
    {{/if}}
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
      {{#each model as |oneGender|}}
      <tr>
        <td >
          <div class="large-6-columns">
            {{oneGender.name}}
          </div>
          <div></div>
        </td>
        <td>
          {{edit-code flag="gender" id=oneGender.id}}
        </td>
      </tr>
      {{/each}}
    </table><br>
</div>
