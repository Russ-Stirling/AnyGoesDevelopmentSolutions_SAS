{{#if (not-eq oudaAuth.getName "Root")}}
  {{#if EUP01IsPermitted }}
    <div class="main-body">
        <div class="form-group">
            <br>
            <hr/>
            <h3>Modify User Profile
                for {{getUser}} {{userProfile.firstName}} {{userProfile.lastName}}</h3>
            <form>
                <div>
                    <div>
                        <div>
                            <div>
                                <label>First Name</label>
                            </div>
                            <div>
                              {{input value=userProfile.firstName type="text" placeholder="enter first name" }}
                            </div>
                        </div>
                        <div>
                            <div>
                                <label>Last Name</label>
                            </div>
                            <div>
                              {{input value=userProfile.lastName type="text" placeholder="enter last name"}}
                            </div>
                        </div>
                        <div>
                            <div>
                                <label>EMail Address</label>
                            </div>
                            <div>
                              {{input value=userProfile.email type="text" placeholder="enter email address"}}
                            </div>
                        </div>

                      {{#if  isChangingPassword }}
                          <div>
                              <div class="form-group">
                                  <label>Old Password</label>
                              </div>
                              <div>
                                {{input value=oldPassword type="password" placeholder="enter old password"}}
                              </div>
                          </div>
                          <div>
                              <div class="form-group">
                                  <label>New Password</label>
                              </div>
                              <div>
                                {{input value=newPassword1 type="password" placeholder="enter new password"}}
                              </div>
                          </div>
                          <div>
                              <div class="form-group">
                                  <label>New Password Again</label>
                              </div>
                              <div>
                                {{input value=newPassword2 type="password" placeholder="enter new password again"}}
                              </div>
                          </div>
                          <div class="main-body">
                              <div class="form-group">
                                  <p></p>
                              </div>
                              <div>
                                  <a href="#" class="btn btn-default" {{action 'cancelChangePassword'}}>Cancel
                                      Change Password</a>
                              </div>
                          </div>
                      {{else}}
                          <div>
                              <div class="form-group">
                                  <label>Password</label>
                              </div>
                              <div>
                                  <a href="#" class="btn btn-default" {{action 'changePassword'}}>Change password</a>
                              </div>
                          </div>

                      {{/if}}

                    </div>
                </div>
            </form>
            <br>
            <a href="#" class="btn btn-default" {{action 'saveUser'}}>Save</a>
            <a href="#" class="btn btn-default" {{action 'cancel'}}>Cancel</a>
        </div>
    </div>
{{else}}
    <div>
        <br>
        <h3>Edit User Profile functionality (EUP01) is not available for your account.</h3>
        <h3>Please contact the system administrator for more details.</h3>
    </div>
{{/if}}
{{else}}
    <div>
        <br>
        <h2>Not available for Root user</h2>
    </div>
{{/if}}

