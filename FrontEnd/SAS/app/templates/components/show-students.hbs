<head>
<link rel="stylesheet" type="text/css" href="../../../styles/app.css">
</head>
<body>
{{#if VS001IsPermitted }}
{{#if isEditing}}
{{#if displayAll}}    
    <div>
        <form>
            <br>
            <div class="form-group">
                <table style="width:20%">
                  <tr>
                     <td >{{input value=searchCriteria  id="searchCriteria" type="text" }}</td> 
                     <td><a href="#" class="btn btn-default" role="button" id="search-button" {{action 'search'}}>Search Students</a></td>
                  </tr><br>
                </table>
            </div>
        </form>
    </div>
    <div>
        <table class="student-table">
            <tr>
                <th>Name</th>
                <th>Student ID</th>
                <th>Date of Birth</th>
                <th>Delete</th>
            </tr>
            {{#each sortedStudents as |oneStudent index|}}
            <tr>
                <td class="student-column"><a href="#" {{action "singleStudent" oneStudent.id}}>{{oneStudent.firstName}}<br>{{oneStudent.lastName}} </a></td>
                <td><div class="large-6-columns">{{oneStudent.studentID}}</div></td>
                <td><div class="large-6-columns">{{oneStudent.dob}}</div></td>
                <td align-content="center">
                    <a href="#" class="btn btn-default" role="button" {{action "deleteCode" oneStudent.id index}}>Delete</a>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
{{else}}
{{/if}}
{{#if showResults}}
    <div>
        <table border=1px cellpadding="10" id="student-table">
            <tr>
                <th>Name</th>
                <th>Student ID</th>
                <th>Date of Birth</th>
            </tr>
            {{#each searchedStudents as |thisStudent index|}}
            <tr>
                <td>{{thisStudent.firstName}}<br>{{thisStudent.lastName}}</td>
                <td>{{thisStudent.studentID}}</td>
                <td>{{thisStudent.dob}}</td>
                <td>
                    <a href="#" class="btn btn-default" role="button" data-ember-action="653">Edit</a>
                </td>
                <td>
                    <a href="#" class="btn btn-default" role="button" {{action "deleteCode" oneStudent.tempId index}}>Delete</a>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
{{else}}
{{/if}}
{{else}}
    <a href="#" class="btn btn-default" role="button" style="width:30%;" {{action 'showStudent'}}>Show Students</a>
{{/if}}
{{else}}
{{/if}}
</body>

