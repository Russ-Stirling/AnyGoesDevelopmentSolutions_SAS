{{#if EC001IsPermitted }}
{{#if isEditing}}
<div>
    <form>
        <br>
        <div class="form-group">
            <table style="width:20%">
                <tr>
                    <td>Name:</td>
                    <td>{{input value=name id="name" type="text"}}</td>
                </tr><br>
                {{#if courseCodeEdit}}
                  <tr>
                    <td>Code:</td>
                    <td>{{input value=code  id="code" type="text" }}</td> 
                  </tr><br>
                  <tr>
                    <td>Number:</td>
                    <td>{{input value=number  id="number" type="number" }}</td> 
                  </tr><br>
                  <tr>
                    <td>Unit:</td>
                    <td>{{input value=unit  id="unit" type="text" }}</td> 
                  </tr><br>
                {{else}}
                {{/if}}
            </table>
            <table>
                {{#if facultyDrop}}
                      <tr>
                        <td>Faculty</td>
                        <td>
                            <div class="form-group">
                            <select class="form-control" onchange={{action "selectFaculty" value="target.value"}}> 
                            <option>-- Please select a faculty --</option>
                                {{#each facultiesModel as |oneFaculty|}}
                                <option value={{oneFaculty.id}}>
                                {{oneFaculty.name}}
                            </option>
                            {{/each}}
                            </select>
                            </div>
                        </td>
                        </tr>
                  {{else}}
                  {{/if}}
                  {{#if departmentDrop}}
                      <tr>
                        <td>Position:</td>
                        <td>{{input value=position  id="position" type="text" }}</td> 
                      </tr><br>
                      <tr>
                        <td>Department</td>
                        <td>
                            <div class="form-group">
                            <select class="form-control" onchange={{action "selectDepartment" value="target.value"}}> 
                            <option>-- Please select a department --</option>
                                {{#each departmentsModel as |oneDepartment|}}
                                <option value={{oneDepartment.id}}>
                                {{oneDepartment.name}}
                            </option>
                            {{/each}}
                            </select>
                            </div>
                        </td>
                        </tr>
                {{else}}
                {{/if}}
            </table>
            <a href="#" class="btn btn-default" role="button" {{action 'savePost'}}>Save</a>
            <a href="#" class="btn btn-default" role="button" {{action 'cancel'}}>Cancel</a>
        </div>
    </form>
</div>
{{else}}
    <!-- goes here: style="width:35%; position:relative; right:10px;" -->
    <a href="#" class="btn btn-default" role="button" {{action "editCode"}}>Edit</a>
    <a href="#" class="btn btn-default" role="button" {{action "deleteCode"}}>Delete</a><br>
{{/if}}
{{else}}
{{/if}}
