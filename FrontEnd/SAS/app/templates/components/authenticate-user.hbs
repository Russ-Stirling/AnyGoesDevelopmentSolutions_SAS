<!-- Display the login screen with the main application background -->
{{#if isPasswordChanging}}
    <section class="hero">
        <div class="row intro">
            <div  >
                <div class="row">
                    <div class="large-10  large-centered columns">
                        <div class="panel">
                            <h3>Please change your password and login again</h3>
                            <br>
                            <div class="row">
                                <div class="small-3 columns">
                                    <label class="right">Enter Password</label>
                                </div>
                                <div class="small-7 columns" class="left">
                                  {{input value=firstPassword type="password" }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="small-3 columns">
                                    <label class="right">Reenter Password</label>
                                </div>
                                <div class="small-7 columns" class="left">
                                  {{input value=secondPassword type="password" }}
                                </div>
                            </div>
                            <br> <br>
                            <a href="#" class="button radius" {{action 'save'}}>Save</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>


{{else}}
<head>
  <link rel="stylesheet" type="text/css" href="../../../styles/app.css">
  <link href='https://fonts.googleapis.com/css?family=Crete+Round' rel='stylesheet' type='text/css'>
</head>
<body>
  <table>
    <tr>
      <td width="100%"><h2 id="title"><a href="/" align="right" style = "text-align: center"><div id ="titlecolor">Student Admission Software</div></a></h2></td>
    </tr>
  </table>
</body>
                        <div class="form-group" style="text-align: center">
                            <br>
                            <table align="center" style="width:20%">
                                <tr>
                                    <td>User Name: </td>
                                    <td>{{input value=name  type="text" placeholder="user name"}}</td>
                                </tr>
                                <tr>
                                    <td>Password: </td>
                                    <td>{{input value=password  type="password" placeholder="password"}}</td>
                                </tr>
                            </table><br>
                            
                            <p><a href="#" class="btn btn-default" {{action 'login'}}>Log In</a></p>
                            <p> {{errorMessage}}</p>
                        </div>
{{/if}}


